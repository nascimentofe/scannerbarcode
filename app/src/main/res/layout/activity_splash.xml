<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atividade.SplashActivity">

    <ImageView
        android:id="@+id/imgPoligon3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/poligon3"
        android:scaleType="fitEnd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgLogoSplash"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/logo_gray"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgPoligon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/poligon1"
        android:scaleType="fitXY"/>

</RelativeLayout>